{
  "name": "upvent-web-app",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && npm start",
    "start": "nodemon server/server.js",
    "dev": "concurrently --kill-others-on-fail \"npm start\" \"npm run client\"",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build && echo finished postbuild"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-errors": "^1.7.3",
    "mongoose": "^5.9.1",
    "nodemon": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  }
}
